void insertionSort(int V[], int num) {
}

void selectionSort(int V[], int num) {
	int i, j, menor, aux;

	for (i = 0; i < num; i++) {
		menor = i;
		for (j = i + 1; j < num; j++)
			if (V[j] < V[menor])
				menor = j;
		if (i != menor) {
			aux = V[i];
			V[i] = V[menor];
			V[menor] = aux;
		}
	}
}

void bubbleSort(int V[], int num) {
	int i, j, aux;
	bool modificado;

	i = 0;
	modificado = true;
	while ((i < num - 1) && modificado) {
		modificado = false;
		for (j = num - 1; j > i; j--)
			if (V[j] < V[j - 1]) {
				aux = V[j];
				V[j] = V[j - 1];
				V[j - 1] = aux;
				modificado = true;
			}
		i++;
	}
}
